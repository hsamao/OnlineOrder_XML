<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.samao.onlineorder.domain">
    <class name="Item" table="ITEM">
            <id name="id" column="ID" type="long">
                    <generator class="identity"/>
            </id>
            <property name="itemNumber" column="ITEM_NUMBER" type="long"/>
            <property name="itemName" column="ITEM_NAME" type="string"/>
            <property name="createDate" column="CREATE_DATE" type="java.util.Date"/>
            <property name="price" column="PRICE" type="big_decimal"/>

    </class>
</hibernate-mapping>